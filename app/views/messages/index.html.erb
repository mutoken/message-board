<div class="panel panel-primary">
    <div class="panel-heading">
        メッセージ一覧
    </div>
</div>

    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>
        <br>
        <% end %>
    </div>

<%= form_for(@message) do |f| %>
<form class="form-horizontal">    
    <div class="form-group">
        <label class="control-label">氏名：</label>
        <%= f.text_field :name, :class => "form-control",:placeholder => "お名前を入力してください" %>
    </div>
    <div class="form-group">
        <label class="control-label">内容：</label>
        <%= f.text_area :body, :class => "form-control",:placeholder => "メッセージをお願いします" %>
    </div>
    <div class="form-group">
        <%= f.submit class: "btn btn-primary btn-lg btn-block" %>
    </div>
</form>
<% end %>
