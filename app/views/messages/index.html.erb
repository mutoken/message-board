<div class="panel panel-primary">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <% if message.age==99 then %>
               年齢は秘密
            <% else %>
               <%= message.age %>歳
            <% end %>
            <%= message.body %>
            <%= link_to "edit" , edit_message_path(message) %></span>
            <%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %></span>
        <br>
        <% end %>
    </div>
</div>

<% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>
