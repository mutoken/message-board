<div class="panel panel-primary">
    <div class="panel-heading">
        新規メッセージ
    </div>
    <%= form_for(@message) do |f| %>
        <% if @message.errors.present? %>
            <div class="alert alert-danger">
                <%= alert %>
                <ul>
                    <% @message.errors.full_messages.each do |full_message| %>
                        <li>
                            <%= full_message %>
                        </li>
                    <% end %>
                </ul>
            </div>
        <% end %>
    
        <div class="panel-body">
            <div class="form-group">
                <label class="control-label">氏名：</label>
                <%= f.text_field :name, :class => "form-control",:placeholder => "お名前は？" %>
            </div>
            <div class="form-group">
                <label class="control-label">年齢：</label>
                <%= f.text_field :age, :class => "form-control",:placeholder => "何歳？（秘密の時は99で）" %>
            </div>
            <div class="form-group">
                <label class="control-label">内容：</label>
                <%= f.text_area :body, :class => "form-control",:placeholder => "メッセージをお願いします" %>
            </div>
            <div class="form-group">
                <%= f.submit class: "btn btn-primary btn-lg btn-block", :value => "送信"%>
            </div>
        </div>
    <% end %>
</div>
